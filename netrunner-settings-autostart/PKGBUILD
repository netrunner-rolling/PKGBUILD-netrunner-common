pkgname=netrunner-settings-autostart
pkgver=$(date +%Y.%m)
pkgrel=1
pkgdesc="Global and user specific autostart applications"
arch=('any')
url='https://github.com/netrunner-common/netrunner-settings-autostart'
license=('GPL')
groups=('netrunner-common')
makedepends=('git')
source=('git://github.com/netrunner-common/netrunner-settings-autostart'
        'imwheel.desktop')
md5sums=('SKIP'
         '3b976c2e19a6045acacb3a1999e8dda6')

package() {
  cd $srcdir/$pkgname
  cp -aR usr $pkgdir/
  
  install -Dm644 "${srcdir}"/imwheel.desktop \
    "${pkgdir}"/usr/share/default-settings/plasma5-profile/autostart/imwheel.desktop

}
