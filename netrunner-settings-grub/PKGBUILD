pkgname=netrunner-settings-grub
pkgver=$(date +%Y.%m)
pkgrel=1
pkgdesc="Netrunner specific grub settings"
arch=('any')
url='https://github.com/netrunner-common/netrunner-settings-grub'
license=('GPL')
groups=('netrunner-common')
makedepends=('git')
source=('git://github.com/netrunner-common/netrunner-settings-grub')
md5sums=('SKIP')

prepare() {
  cd $srcdir/$pkgname
  rm etc/grub.d/10_linux #can not exist in two packages and incompatable with Manjaro base
}

  package() {
  cd $srcdir/$pkgname
  cp -aR etc $pkgdir
}
