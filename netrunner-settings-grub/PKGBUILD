pkgname=netrunner-settings-grub
pkgver=$(date +%Y%m%d)
pkgrel=1
pkgdesc="Netrunner specific grub settings"
arch=('any')
url='https://github.com/netrunner-common/netrunner-settings-grub'
license=('GPL')
groups=('netrunner-common')
makedepends=('git')
source=('git://github.com/netrunner-common/netrunner-settings-grub')
md5sums=('SKIP')

package() {
  cd $srcdir/$pkgname
  cp -aR etc/grub.d/06_netrunner_theme $pkgdir/
}
