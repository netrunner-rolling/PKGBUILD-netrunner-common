# Contributor: artoo <artoo@manjaro.org>

pkgbase=syslinux-themes
pkgname=netrunner-syslinux-theme
pkgver=$(date +%Y%m%d)
pkgrel=1
pkgdesc='Netrunner Rolling syslinux theme'
arch=('any')
url="https://github.com/netrunner-rolling/netrunner-syslinux-theme"
license=('GPL')
depends=('syslinux')
makedepends=('git')
provides=('syslinux-theme')
conflicts=('syslinux-theme' 'isolinux')
replaces=('syslinux-theme' 'isolinux')
source=("git+$url.git")
sha256sums=('SKIP')

package() {
    
    local _dest=$pkgdir/usr/share/syslinux/theme
    install -d $_dest
    cp -v $srcdir/netrunner-syslinux-theme/syslinux/netrunner/* $_dest
    cp -v $srcdir/netrunner-syslinux-theme/syslinux/{lng,hlp,cfg,kbdmap}/* $_dest
    install -D $srcdir/netrunner-syslinux-theme/isolinux/isolinux.cfg $pkgdir/usr/share/syslinux/isolinux/isolinux.cfg
}
