pkgbase=grub-theme-live
pkgname=grub-theme-live-netrunner
pkgver=17.0.1
pkgrel=1
pkgdesc='Netrunner Linux grub theme for install media'
arch=('any')
url="https://github.com/netrunner-rolling/grub-theme-live"
