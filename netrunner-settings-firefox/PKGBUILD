pkgname=netrunner-settings-firefox
pkgver=$(date +%Y.%m)
pkgrel=1
pkgdesc="Netrunner settings for firefox, like Bookmarks"
arch=('any')
url='https://github.com/netrunner-common/netrunner-settings-firefox'
license=('GPL')
groups=('netrunner-common')
depends=(firefox-kde)
makedepends=('git')
source=('git://github.com/netrunner-common/netrunner-settings-firefox')
md5sums=('SKIP')

package() {
  cd $srcdir/$pkgname
  cp -aR etc $pkgdir/
}
