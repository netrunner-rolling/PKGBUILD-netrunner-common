# Maintainer: James Kittsmiller (AJSlye) <james@nulogicsystems.com>

pkgname=netrunner-settings-firefox
pkgver=$(date +%Y.%m)
pkgrel=
pkgdesc="Netrunner settings for firefox, like Bookmarks"
arch=('any')
url='https://github.com/netrunner-rolling/netrunner-settings-firefox'
license=('GPL')
groups=('netrunner-common')
makedepends=('git')
source=('git://github.com/netrunner-common/netrunner-settings-firefox')
md5sums=('SKIP')

prepare() {
  cd $srcdir/$pkgname
  rm -R etc/skel
  rm -R etc/firefox-esr
  rm -R usr/lib/firefox-esr
}

package() {
  cd $srcdir/$pkgname
  cp -aR etc $pkgdir/
  cp -aR usr $pkgdir/
}
